<Alloy>
		<Window  layout="vertical" backgroundColor="#000" title="FITBOOM" height="Ti.UI.FILL">

			<ImageView id="logo"></ImageView>
			<ScrollView id="scrollView" backgroundColor="#fff">
				<View  id="childView">
					<Label font="20" text="Sign In Via Email" left="10" width="Ti.UI.SIZE" height="Ti.UI.SIZE"></Label>
					<Label id="email" text="Email Address"></Label>
					<TextField id="emailField"></TextField>
					<Label id="email" text="Password"></Label>
					<TextField id="emailField"></TextField>
					<Label id="email" text="Confirm password"></Label>
					<TextField id="emailField"></TextField>
				</View>
			</ScrollView>
			<Button  title="SIGN IN" height="50" top="20" backgroundColor="green" left="10" right="10" onClick="emailLogin"></Button>
			<Button  title="Sign in With Facebook" height="50" top="10" backgroundColor="blue" left="10" right="10" onClick="fbLogin"></Button>
		</Window>
</Alloy>
